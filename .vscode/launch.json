    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Project",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": ""
        },
        {
            "name": "Debug",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "debug_collisions": true,
            "debug_paths": true,
            "debug_navigation": true,
            "debug_avoidance": true,
            "debug_stringnames": true,
            "additional_options": "--debug"
        }
    ]
}